@model GymTrack.Models.Trainer

@{
    ViewData["Title"] = "Yeni Eğitmen Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 fw-bold">🎓 Yeni Eğitmen Ekle</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h5 class="text-secondary border-bottom pb-2 mb-3">Eğitmen Bilgileri</h5>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" placeholder="Örn: Ahmet Yılmaz" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Uzmanlık Alanı</label>
                            <input asp-for="Specialty" class="form-control" placeholder="Örn: Pilates, Crossfit, Bodybuilding..." />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Biyografi / Hakkında</label>
                            <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Eğitmen hakkında kısa bilgi, sertifikalar vb..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <h5 class="text-secondary border-bottom pb-2 mb-3 mt-4">Çalışma Yeri</h5>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Bağlı Olduğu Spor Salonu</label>
                            <select asp-for="FitnessCenterId" class="form-select" asp-items="ViewBag.FitnessCenterId">
                                <option value="">-- Bir Salon Seçin --</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="bi bi-check-lg"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}