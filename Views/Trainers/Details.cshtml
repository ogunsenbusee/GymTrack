@model GymTrack.Models.Trainer

@{
    ViewData["Title"] = "Eğitmen Profili";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="row g-0">

                    <div class="col-md-4 bg-dark text-white d-flex flex-column align-items-center justify-content-center p-4 text-center">
                        <div class="bg-secondary rounded-circle d-flex justify-content-center align-items-center mb-3" style="width: 120px; height: 120px; border: 4px solid white;">
                            <i class="bi bi-person-fill display-1"></i>
                        </div>
                        <h4 class="fw-bold mb-1">@Model.FullName</h4>
                        <span class="badge bg-warning text-dark mb-3">@Model.Specialty</span>

                        <a asp-controller="Appointments" asp-action="Create" asp-route-trainerId="@Model.Id" class="btn btn-success w-100 fw-bold mt-2">
                            <i class="bi bi-calendar-check-fill"></i> Hemen Randevu Al
                        </a>
                    </div>

                    <div class="col-md-8">
                        <div class="card-body p-4">
                            <h5 class="card-title fw-bold text-primary border-bottom pb-2 mb-3">
                                <i class="bi bi-info-circle-fill"></i> Hakkında
                            </h5>
                            <p class="card-text text-muted" style="line-height: 1.6;">
                                @(string.IsNullOrEmpty(Model.Bio) ? "Bu eğitmen henüz bir biyografi eklememiş." : Model.Bio)
                            </p>

                            <div class="row mt-4">
                                <div class="col-md-6 mb-3">
                                    <h6 class="fw-bold text-dark"><i class="bi bi-building"></i> Çalıştığı Salon</h6>
                                    @if (Model.FitnessCenter != null)
                                    {
                                        <p class="text-primary mb-0 fw-semibold">@Model.FitnessCenter.Name</p>
                                        <small class="text-muted">@Model.FitnessCenter.Address</small>
                                    }
                                    else
                                    {
                                        <p class="text-muted">- Atanmamış -</p>
                                    }
                                </div>

                                <div class="col-md-6 mb-3">
                                    <h6 class="fw-bold text-dark"><i class="bi bi-clock-history"></i> Çalışma Saatleri</h6>
                                    @if (Model.FitnessCenter != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-light text-dark border me-2">Açılış: @Model.FitnessCenter.OpeningTime</span>
                                            <span class="badge bg-light text-dark border">Kapanış: @Model.FitnessCenter.ClosingTime</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Belirtilmemiş</small>
                                    }
                                </div>
                            </div>

                            <div class="mt-4 d-flex justify-content-end gap-2">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Listeye Dön
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                        <i class="bi bi-pencil-square"></i> Profili Düzenle
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>