@model IEnumerable<GymTrack.Models.FitnessCenter>

@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>🏋️ Spor Salonları Listesi</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success fw-bold">
                <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
            </a>
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Salon Adı</th>
                            <th>Adres</th>
                            <th>Çalışma Saatleri</th>
                            <th class="text-center">1 Ay</th>
                            <th class="text-center">3 Ay</th>
                            <th class="text-center">6 Ay</th>
                            <th class="text-center">1 Yıl</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary">@item.Name</td>

                                <td class="text-muted small">
                                    <i class="bi bi-geo-alt-fill text-danger"></i> @item.Address
                                </td>

                                <td>
                                    <i class="bi bi-clock text-muted"></i>
                                    @item.OpeningTime - @item.ClosingTime
                                </td>

                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">₺ @item.PriceMonthly</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">₺ @item.Price3Months</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">₺ @item.Price6Months</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success">₺ @item.Price12Months</span>
                                </td>

                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Detaylar">
                                        <i class="bi bi-info-circle"></i>
                                    </a>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white ms-1" title="Düzenle">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>