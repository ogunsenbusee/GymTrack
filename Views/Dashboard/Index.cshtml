@{
    ViewData["Title"] = "Kontrol Paneli";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">GymTrack Paneli</h1>
        <p class="lead text-muted">Tüm modüllere tek ekrandan erişim.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Yapay Zeka Koçu</h5>
                    <p class="card-text text-muted">Kişiye özel 4 haftalık plan üret.</p>
                    <a asp-controller="AiCoach" asp-action="Index" class="btn btn-primary w-100">
                        <i class="bi bi-magic"></i> Plan Oluştur
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Eğitmenler</h5>
                    <p class="card-text text-muted">Kayıtlı eğitmenlerin listesi.</p>
                    <div class="d-flex gap-2">
                        <a asp-controller="Trainers" asp-action="Index" class="btn btn-outline-primary flex-grow-1">Listele</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Trainers" asp-action="Create" class="btn btn-outline-success">Yeni Ekle</a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Spor Salonları</h5>
                    <p class="card-text text-muted">Anlaşmalı salonların listesi.</p>
                    <div class="d-flex gap-2">
                        <a asp-controller="FitnessCenters" asp-action="Index" class="btn btn-outline-primary flex-grow-1">Listele</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="FitnessCenters" asp-action="Create" class="btn btn-outline-success">Yeni Ekle</a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Randevu Sistemi</h5>
                    <p class="card-text text-muted">Randevu al veya geçmiş randevularını gör.</p>
                    <div class="d-flex gap-2">
                        <a asp-controller="Appointments" asp-action="MyAppointments" class="btn btn-outline-primary">Randevularım</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Appointments" asp-action="Manage" class="btn btn-outline-dark">Yönetim Paneli</a>
                        }
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <small class="text-muted d-block mt-2 fst-italic">“Yönetim” sadece admin içindir.</small>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Hesabım</h5>
                    <p class="card-text text-muted">Güvenli çıkış ve profil işlemleri.</p>
                    <div class="d-flex gap-2">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>