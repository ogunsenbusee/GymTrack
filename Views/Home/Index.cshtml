@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    body {
        background-color: #121212; 
        color: white;
    }
    .card {
        background-color: #1e1e1e; 
        border: 1px solid #333;
    }
    .navbar {
        background-color: #1e1e1e !important; 
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg" style="width: 100%; max-width: 450px;">

        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0 fw-bold">GymTrack</h3>
            <small>Spor Salonu Yönetim Sistemi</small>
        </div>

        <div class="card-body p-5">
            <div class="text-center mb-4">
                <i class="bi bi-person-circle display-1 text-secondary"></i>
                <p class="text-muted mt-3">Devam etmek için lütfen giriş yapın veya kayıt olun.</p>
            </div>

            <div class="d-grid gap-3">
                <a class="btn btn-primary btn-lg fw-bold" asp-area="Identity" asp-page="/Account/Login">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Giriş Yap
                </a>

                <a class="btn btn-outline-light btn-lg fw-bold" asp-area="Identity" asp-page="/Account/Register">
                    <i class="bi bi-person-plus me-2"></i> Üye Ol
                </a>
            </div>
        </div>

        <div class="card-footer text-center text-muted py-3">
            <small>&copy; 2025 GymTrack Projesi</small>
        </div>
    </div>
</div>